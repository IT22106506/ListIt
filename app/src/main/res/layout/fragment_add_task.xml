<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AddTaskFragment"
        android:background="@color/primary"
        android:padding="12dp">

        <TextView
            android:id="@+id/addTaskHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aclonica"
            android:text="Add Task."
            android:textColor="@color/secondary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/addTaskHeading"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:fontFamily="@font/anonymous_pro_bold"
            android:hint="Enter the title"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/addTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter the description"
            android:gravity="top"
            android:padding="12dp"
            android:textSize="18sp"
            android:fontFamily="@font/anonymous_pro_bold"
            android:background="@drawable/border"
            android:layout_below="@id/addTaskTitle"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/priorityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addTaskHeading"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="390dp"
            android:text="Priority"
            android:textColor="@color/secondary"
            android:fontFamily="@font/aclonica"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/addTaskPriority"
            style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
            android:layout_width="310dp"
            android:layout_height="63dp"
            android:layout_below="@id/priorityLabel"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/ternary"
            android:background="@drawable/border"
            android:entries="@array/priority_levels"
            android:padding="12dp"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/addTaskDeadline"
            android:layout_width="337dp"
            android:layout_height="61dp"
            android:layout_below="@id/addTaskPriority"
            android:layout_alignParentStart="true"
            android:layout_marginTop="37dp"
            android:background="@drawable/border"
            android:fontFamily="@font/anonymous_pro_bold"
            android:inputType="datetime"
            android:textColor="@color/ternary"
            android:gravity="top"
            android:hint="Enter the deadline"
            android:padding="12dp"
            android:textSize="18sp" />

<!--        <TextView-->
<!--            android:id="@+id/addTaskDeadline"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="28sp"-->
<!--            android:fontFamily="@font/anonymous_pro_bold"-->
<!--            android:textColor="@color/secondary"-->
<!--            />-->

    </RelativeLayout>
</layout>